{
  "name": "mfb",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=./playground",
    "build:watch": "turbo build:watch",
    "dev:mui": "turbo run  --filter=playground... dev",
    "dev:pg": "turbo run --filter=./playground dev:pg",
    "bw": "turbo run --filter=./playground... build:watch",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
